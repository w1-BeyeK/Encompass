<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Encompass.LoginPage">

    <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" Spacing="20" Padding="60">
        <Image Source="icon.png"/>
        <Label Text="ENCOMPASS" FontSize="Large" FontAttributes="Bold"/>
        <Entry x:Name="username" Placeholder="Username" HorizontalOptions="FillAndExpand"/>
        <Entry x:Name="password" Placeholder="Password" IsPassword="True" HorizontalOptions="FillAndExpand"/>
        <Button Text="Login" Clicked="OnLogin"/>
        <Label x:Name="pinCodeLink" Text="Or enter your pincode" TextColor="SteelBlue" HorizontalOptions="CenterAndExpand"/>
    </StackLayout>

</ContentPage>
